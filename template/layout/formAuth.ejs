<% layout('./page') %>

<p class="col-lg-offset-2">Please enter toyr name and password to sign in.</p>
<form class="form-horizontal login-form" name="login-form" style="padding-top: 50px" method="post" action="<%=blocks.postUrl%>">
    <div class="form-group">
        <label for="input-username" class="col-lg-2 control-label">Name</label>
            <input name="email" value="name" type="text" class="form-control" id="input-username">
    </div>
    <div class="form-group">
        <label for="input-password" class="col-lg-2 control-label">Password</label>
            <input name=password value="pass" type="password" class="form-control" id="input-password" placeholder="Password">
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-2">
            <button type="submit" class="btn btn-primary" data-loading-text="Sending..."><%=blocks.but%></button>
            <button type="reset" class="btn btn-default">Cancel</button>
            <span class="help-block error"></span>
        </div>
    </div>
</form>